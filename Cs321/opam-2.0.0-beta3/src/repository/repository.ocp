if build_libs = [] ||
   %mem( string = "opam-repository"
         strings = build_libs )
then {
begin library "opam-repository"

  files   = [
    "opamRepositoryConfig.ml"
    "opamDownload.ml"
    "opamRepositoryBackend.ml"
    "opamRepositoryPath.ml"
    "opamHTTP.ml"
    "opamLocal.ml"
    "opamVCS.ml"
    "opamGit.ml"
    "opamDarcs.ml"
    "opamHg.ml"
    "opamRepository.ml"
  ]

  requires = [
    "opam-core"
    "opam-format"
  ]

end
}
